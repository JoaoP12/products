<div class="container">
  <h1 class="mb-3">Shopping Cart</h1>
  <% @cart_products.each_with_index do |product| %>
    <div class="card mb-2 cart-card">
      <div class="card-body d-flex">
        <img class="card-img-left cart-product-img" src="<%= product.img_link %>" alt="Product image">
        <div class="card-container d-flex justify-content-between w-100">
          <div class="card-container">
            <h5 class="card-title"><%= product.title %></h5>
            <h6 class="card-subtitle"><%= product.price_formatted %></h6>
          </div>
          <div class="card-container">
            <button class="btn btn-primary">Checkout</button>  
            <button class="btn btn-danger">Remove</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>