<div class="form-container">
  <h2>Sign In</h2>
  <%= form_for resource, as: resource_name, url: session_path(resource_name), class: "d-flex flex-column" do |form| %>
    <div class="mb-3">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control",
        placeholder: "e.g joseph_bezerra@outlook.com" %>
    </div>
    <div class="mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, class:"form-control",
        placeholder: "Password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="mb-3">
        <%= form.check_box :remember_me %>
        <%= form.label :remember_me %>
      </div>
    <% end %>
    <div class="mb-3 d-flex flex-column">
      <%= form.submit "Sign In", class: "btn btn-primary align-self-center" %>
    </div>
    <%= render "devise/shared/links" %>
  <% end %>
</div>