<div class="search-bar mb-3">
  <%= form_with url: products_path, method: :get do |f| %>
    <div class="w-75">
      <%= f.text_field :query, name:"query", placeholder: "Search something here",
        id: "query", class: "form-control", autocomplete: :off %>
    </div>
    <button class="btn btn-primary">Search</button>
  <% end %>
</div>